{% if etatMenu == 'show' %}
    <script>
        $j('.menuDiv').css('display', 'block');
    </script>
{% elseif etatMenu == 'hide' %}
    <script>
        $j('.menuDiv').css('display', 'none');
    </script>
{% endif %}

